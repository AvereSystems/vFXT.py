{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccount": {
      "type": "object"
    }
  },
  "variables": {
    "storageApiVersion": "2020-08-01-preview"
  },
  "functions": [
    {
      "namespace": "fx",
      "members": {
        "GetChildName": {
          "parameters": [
            {
              "name": "resourceName",
              "type": "string"
            }
          ],
          "output": {
            "type": "string",
            "value": "[if(equals(parameters('resourceName'), ''), 'child', parameters('resourceName'))]"
          }
        }
      }
    }
  ],
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageAccount').name]",
      "apiVersion": "[variables('storageApiVersion')]",
      "location": "[resourceGroup().location]",
      "kind": "[parameters('storageAccount').type]",
      "sku": {
        "name": "[parameters('storageAccount').replication]"
      },
      "properties": {
      }
    },
    {
      "condition": "[not(equals(parameters('storageAccount').blobContainers[copyIndex()].name, ''))]",
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "name": "[concat(parameters('storageAccount').name, '/default/', fx.GetChildName(parameters('storageAccount').blobContainers[copyIndex()].name))]",
      "apiVersion": "[variables('storageApiVersion')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccount').name)]"
      ],
      "properties": {
        "publicAccess": "[parameters('storageAccount').blobContainers[copyIndex()].publicAccess]"
      },
      "copy": {
        "name": "blobContainers",
        "count": "[length(parameters('storageAccount').blobContainers)]"
      }
    },
    {
      "condition": "[not(equals(parameters('storageAccount').fileShares[copyIndex()].name, ''))]",
      "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
      "name": "[concat(parameters('storageAccount').name, '/default/', fx.GetChildName(parameters('storageAccount').fileShares[copyIndex()].name))]",
      "apiVersion": "[variables('storageApiVersion')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccount').name)]"
      ],
      "properties": {
        "shareQuota": "[parameters('storageAccount').fileShares[copyIndex()].size]"
      },
      "copy": {
        "name": "fileShares",
        "count": "[length(parameters('storageAccount').fileShares)]"
      }
    },
    {
      "condition": "[not(equals(parameters('storageAccount').messageQueues[copyIndex()].name, ''))]",
      "type": "Microsoft.Storage/storageAccounts/queueServices/queues",
      "name": "[concat(parameters('storageAccount').name, '/default/', fx.GetChildName(parameters('storageAccount').messageQueues[copyIndex()].name))]",
      "apiVersion": "[variables('storageApiVersion')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccount').name)]"
      ],
      "properties": {
      },
      "copy": {
        "name": "messageQueues",
        "count": "[length(parameters('storageAccount').messageQueues)]"
      }
    }
  ],
  "outputs": {
    "storageAccount": {
      "type": "object",
      "value": "[parameters('storageAccount')]"
    }
  }
}
