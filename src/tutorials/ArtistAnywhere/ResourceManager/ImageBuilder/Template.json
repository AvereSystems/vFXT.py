{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "imageTemplate": {
      "type": "object"
    },
    "imageGallery": {
      "type": "object"
    },
    "managedIdentity": {
      "type": "object"
    }
  },
  "variables": {
    "imageBuilderApiVersion": "2020-02-14",
    "imageGalleryApiVersion": "2020-09-30"
  },
  "resources": [
    {
      "type": "Microsoft.VirtualMachineImages/imageTemplates",
      "name": "[parameters('imageTemplate').name]",
      "apiVersion": "[variables('imageBuilderApiVersion')]",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId(parameters('managedIdentity').resourceGroupName, 'Microsoft.ManagedIdentity/userAssignedIdentities', parameters('managedIdentity').name)]": {
          }
        }
      },
      "properties": {
        "buildTimeoutInMinutes": "[parameters('imageTemplate').buildTimeoutMinutes]",
        "vmProfile": {
          "vmSize": "[parameters('imageTemplate').machineSize]"
        },
        "source": {
          "type": "[parameters('imageTemplate').imageSourceType]",
          "version": "[parameters('imageTemplate').imageSourceVersion]",
          "publisher": "[reference(resourceId(parameters('imageGallery').resourceGroupName, 'Microsoft.Compute/galleries/images', parameters('imageGallery').name, parameters('imageGallery').imageDefinitionName), variables('imageGalleryApiVersion')).identifier.publisher]",
          "offer": "[reference(resourceId(parameters('imageGallery').resourceGroupName, 'Microsoft.Compute/galleries/images', parameters('imageGallery').name, parameters('imageGallery').imageDefinitionName), variables('imageGalleryApiVersion')).identifier.offer]",
          "sku": "[reference(resourceId(parameters('imageGallery').resourceGroupName, 'Microsoft.Compute/galleries/images', parameters('imageGallery').name, parameters('imageGallery').imageDefinitionName), variables('imageGalleryApiVersion')).identifier.sku]"
        },
        "customize": "[parameters('imageTemplate').buildCustomizeCommands]",
        "distribute": [
          {
            "type": "SharedImage",
            "runOutputName": "SharedImage",
            "galleryImageId": "[resourceId(parameters('imageGallery').resourceGroupName, 'Microsoft.Compute/galleries/images/versions', parameters('imageGallery').name, parameters('imageGallery').imageDefinitionName, parameters('imageTemplate').imageOutputVersion)]",
            "replicationRegions": [
              "[resourceGroup().location]"
            ],
            "artifactTags": {
              "imageTemplateName": "[parameters('imageTemplate').name]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "imageTemplate": {
      "type": "object",
      "value": "[parameters('imageTemplate')]"
    }
  }
}
