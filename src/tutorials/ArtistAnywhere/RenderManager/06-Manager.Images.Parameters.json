{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "renderManager": {
      "value": {
        "userIdentityId": "",
        "machineImages": [
          {
            "enabled": true,
            "templateName": "RenderManager",
            "definitionName": "Linux8",
            "sourceType": "PlatformImage",
            "sourceVersion": "latest",
            "customizePipeline": [
              {
                "name": "PreMounts",
                "type": "Shell",
                "inline": [
                  "yum -y install nfs-utils"
                ]
              },
              {
                "name": "Mounts",
                "type": "Shell",
                "inline": [
                ]
              },
              {
                "name": "Tools",
                "type": "Shell",
                "inline": [
                  "cd /usr/local/bin",
                  "cp /mnt/tools/opencue/v0.4.14/opencue-cuebot-schema.sql .",
                  "cp /mnt/tools/opencue/v0.4.14/opencue-cuebot-data.sql .",
                  "cp /mnt/tools/opencue/v0.4.14/opencue-cuebot.jar .",
                  "cp /mnt/tools/opencue/v0.4.14/opencue-cuebot.service ."
                ]
              },
              {
                "name": "OpenCue",
                "type": "Shell",
                "inline": [
                  "yum -y install java-11-openjdk",
                  "yum -y install postgresql-contrib"
                ]
              }
            ],
            "buildTimeoutMinutes": 180
          }
        ]
      }
    },
    "imageGallery": {
      "value": {
        "name": "",
        "imageReplicationCount": 1,
        "imageReplicationRegions": [
        ]
      }
    },
    "virtualNetwork": {
      "value": {
        "name": "",
        "subnetName": "Render",
        "resourceGroupName": ""
      }
    }
  }
}
