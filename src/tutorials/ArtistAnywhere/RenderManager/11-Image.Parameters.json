{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "managedIdentity": {
      "value": {
        "name": "MediaPipeline",
        "resourceGroupName": "ArtistAnywhere"
      }
    },
    "imageGallery": {
      "value": {
        "name": "MediaPipeline",
        "resourceGroupName": "ArtistAnywhere.Gallery"
      }
    },
    "imageTemplates": {
      "value": [
        {
          "deploy": false,
          "name": "RenderManagerLinux",
          "imageOperatingSystemType": "Linux",
          "imageDefinitionName": "ServerLinux",
          "imageSourceType": "PlatformImage",
          "imageSourceVersion": "latest",
          "imageOutputVersion": "1.0.0",
          "imageStorageAccount": {
            "type": "Standard_LRS"
          },
          "machineProfile": {
            "size": "",
            "osDiskSizeGB": 0
          },
          "buildTimeoutMinutes": 120,
          "buildCustomization": [
            {
              "type": "Shell",
              "scriptUri": "https://mediaasset.blob.core.windows.net/script/09-Image.sh",
              "sha256Checksum": ""
            },
            {
              "type": "File",
              "sourceUri": "https://mediaasset.blob.core.windows.net/script/10-Machine.sh",
              "destination": "/tmp/10-Machine.sh",
              "sha256Checksum": ""
            }
          ]
        },
        {
          "deploy": false,
          "name": "RenderManagerWindows",
          "imageOperatingSystemType": "Windows",
          "imageDefinitionName": "ServerWindows",
          "imageSourceType": "PlatformImage",
          "imageSourceVersion": "latest",
          "imageOutputVersion": "1.0.0",
          "imageStorageAccount": {
            "type": "Standard_LRS"
          },
          "machineProfile": {
            "size": "",
            "osDiskSizeGB": 0
          },
          "buildTimeoutMinutes": 120,
          "buildCustomization": [
            {
              "type": "PowerShell",
              "scriptUri": "https://mediaasset.blob.core.windows.net/script/09-Image.ps1",
              "sha256Checksum": ""
            },
            {
              "type": "File",
              "sourceUri": "https://mediaasset.blob.core.windows.net/script/10-Machine.ps1",
              "destination": "C:\\Windows\\Temp\\10-Machine.ps1",
              "sha256Checksum": ""
            }
          ]
        }
      ]
    },
    "virtualNetwork": {
      "value": {
        "name": "MediaPipeline",
        "subnetName": "Compute",
        "resourceGroupName": "ArtistAnywhere.Network"
      }
    }
  }
}
