{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "renderDesktop": {
      "type": "object",
      "metadata": {
        "description": "The render client desktop."
      }
    },
    "imageGallery": {
      "type": "object",
      "metadata": {
        "description": "The shared image gallery."
      }
    },
    "logAnalytics": {
      "type": "object",
      "metadata": {
        "description": "The log analytics workspace."
      }
    },
    "virtualNetwork": {
      "type": "object",
      "metadata": {
        "description": "The virtual network subnet."
      }
    }
  },
  "variables": {
    "virtualNetworkApiVersion": "2020-03-01",
    "virtualMachineApiVersion": "2019-12-01"
  },
  "functions": [
    {
      "namespace": "desktop",
      "members": {
        "getMachineName": {
          "parameters": [
            {
              "name": "machineTypes",
              "type": "array"
            },
            {
              "name": "countPerType",
              "type": "int"
            },
            {
              "name": "instanceIndex",
              "type": "int"
            }
          ],
          "output": {
            "type": "string",
            "value": "[concat(parameters('machineTypes')[mod(parameters('instanceIndex'), length(parameters('machineTypes')))].namePrefix, mod(parameters('instanceIndex'), parameters('countPerType')))]"
          }
        }
      }
    }
  ],
  "resources": [
    {
      "condition": "[parameters('renderDesktop').machineTypes[copyIndex()].enabled]",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[desktop.getMachineName(parameters('renderDesktop').machineTypes, parameters('renderDesktop').machineCountPerType, copyIndex())]",
      "apiVersion": "[variables('virtualNetworkApiVersion')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "primary": true,
        "enableAcceleratedNetworking": "[parameters('renderDesktop').machineTypes[copyIndex()].acceleratedNetworking]",
        "ipConfigurations": [
          {
            "name": "ipConfig0",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[resourceId(parameters('virtualNetwork').resourceGroupName, 'Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetwork').name, parameters('virtualNetwork').subnetName)]"
              }
            }
          }
        ]
      },
      "copy": {
        "name": "renderDesktops",
        "count": "[mul(length(parameters('renderDesktop').machineTypes), parameters('renderDesktop').machineCountPerType)]"
      }
    },
    {
      "condition": "[parameters('renderDesktop').machineTypes[copyIndex()].enabled]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[desktop.getMachineName(parameters('renderDesktop').machineTypes, parameters('renderDesktop').machineCountPerType, copyIndex())]",
      "apiVersion": "[variables('virtualMachineApiVersion')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', desktop.getMachineName(parameters('renderDesktop').machineTypes, parameters('renderDesktop').machineCountPerType, copyIndex()))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('renderDesktop').machineTypes[copyIndex()].machineSize]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', desktop.getMachineName(parameters('renderDesktop').machineTypes, parameters('renderDesktop').machineCountPerType, copyIndex()))]"
            }
          ]
        },
        "storageProfile": {
          "imageReference": {
            "id": "[parameters('renderDesktop').machineTypes[copyIndex()].image.referenceId]"
          },
          "osDisk": {
            "caching": "ReadOnly",
            "createOption": "FromImage"
          }
        },
        "osProfile": {
          "computerName": "[concat(parameters('renderDesktop').machineTypes[copyIndex()].namePrefix, copyIndex())]",
          "adminUsername": "[parameters('renderDesktop').machineTypes[copyIndex()].login.adminUsername]",
          "adminPassword": "[parameters('renderDesktop').machineTypes[copyIndex()].login.adminPassword]"
        }
      },
      "resources": [
        {
          "condition": "[not(equals(parameters('renderDesktop').machineTypes[mod(copyIndex(), length(parameters('renderDesktop').machineTypes))].gpuDriver.type, ''))]",
          "type": "extensions",
          "apiVersion": "[variables('virtualMachineApiVersion')]",
          "location": "[resourceGroup().location]",
          "name": "Graphics",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', desktop.getMachineName(parameters('renderDesktop').machineTypes, parameters('renderDesktop').machineCountPerType, copyIndex()))]"
          ],
          "properties": {
            "publisher": "[parameters('renderDesktop').machineTypes[mod(copyIndex(), length(parameters('renderDesktop').machineTypes))].gpuDriver.publisher]",
            "type": "[parameters('renderDesktop').machineTypes[mod(copyIndex(), length(parameters('renderDesktop').machineTypes))].gpuDriver.type]",
            "typeHandlerVersion": "[parameters('renderDesktop').machineTypes[mod(copyIndex(), length(parameters('renderDesktop').machineTypes))].gpuDriver.typeVersion]",
            "autoUpgradeMinorVersion": true
          }
        },
        {
          "type": "extensions",
          "apiVersion": "[variables('virtualMachineApiVersion')]",
          "location": "[resourceGroup().location]",
          "name": "Custom",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', desktop.getMachineName(parameters('renderDesktop').machineTypes, parameters('renderDesktop').machineCountPerType, copyIndex()))]",
            "[resourceId('Microsoft.Compute/virtualMachines/extensions', desktop.getMachineName(parameters('renderDesktop').machineTypes, parameters('renderDesktop').machineCountPerType, copyIndex()), 'Graphics')]"
          ],
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.10",
            "autoUpgradeMinorVersion": true,
            "protectedSettings": {
              "commandToExecute": "[parameters('renderDesktop').machineTypes[copyIndex()].extension.commandToExecute]"
            }
          }
        },
        {
          "condition": "[not(equals(parameters('logAnalytics').workspaceId, ''))]",
          "type": "extensions",
          "apiVersion": "[variables('virtualMachineApiVersion')]",
          "location": "[resourceGroup().location]",
          "name": "Monitor",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', desktop.getMachineName(parameters('renderDesktop').machineTypes, parameters('renderDesktop').machineCountPerType, copyIndex()))]",
            "[resourceId('Microsoft.Compute/virtualMachines/extensions', desktop.getMachineName(parameters('renderDesktop').machineTypes, parameters('renderDesktop').machineCountPerType, copyIndex()), 'Custom')]"
          ],
          "properties": {
            "publisher": "Microsoft.EnterpriseCloud.Monitoring",
            "type": "MicrosoftMonitoringAgent",
            "typeHandlerVersion": "1.0",
            "autoUpgradeMinorVersion": true,
            "protectedSettings": {
              "workspaceKey": "[parameters('logAnalytics').workspaceKey]"
            },
            "settings": {
              "workspaceId": "[parameters('logAnalytics').workspaceId]"
            }
          }
        }
      ],
      "copy": {
        "name": "renderDesktops",
        "count": "[mul(length(parameters('renderDesktop').machineTypes), parameters('renderDesktop').machineCountPerType)]"
      }
    }
  ],
  "outputs": {
    "renderDesktops": {
      "type": "array",
      "value": "[parameters('renderDesktop').machineTypes]"
    }
  }
}
