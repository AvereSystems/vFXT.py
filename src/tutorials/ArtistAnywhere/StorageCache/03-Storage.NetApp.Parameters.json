{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccount": {
      "value": {
        "name": "MediaStudio",
        "subnetName": "NetApp"
      }
    },
    "storagePools": {
      "value": [
        {
          "name": "Storage",
          "tier": "Standard",
          "size": 4
        }
      ]
    },
    "storageVolumes": {
      "value": [
        {
          "name": "Scenes",
          "pool": "Storage",
          "size": 2048,
          "exportPolicyRules": [
            {
              "ruleIndex": 1,
              "cifs": false,
              "nfsv3": true,
              "nfsv41": false,
              "unixReadOnly": false,
              "unixReadWrite": true,
              "allowedClients": "0.0.0.0/0"
            }            
          ]
        },
        {
          "name": "Frames",
          "pool": "Storage",
          "size": 2048,
          "exportPolicyRules": [
            {
              "ruleIndex": 1,
              "cifs": false,
              "nfsv3": true,
              "nfsv41": false,
              "unixReadOnly": false,
              "unixReadWrite": true,
              "allowedClients": "0.0.0.0/0"
            }            
          ]
        }
      ]
    },
    "storageTargets": {
      "value": [
        {
          "name": "Scenes",
          "type": "nfs3",
          "junctions": [
            {
              "namespacePath": "/storage/netApp/scenes",
              "nfsExport": "/scenes",
              "targetPath": ""
            }
          ],
          "mountOptions": "nfs vers=3,hard,proto=tcp,mountproto=tcp,retry=30 0 0",
          "usageModel": "WRITE_AROUND"
        },
        {
          "name": "Frames",
          "type": "nfs3",
          "junctions": [
            {
              "namespacePath": "/storage/netApp/frames",
              "nfsExport": "/frames",
              "targetPath": ""
            }
          ],
          "mountOptions": "nfs vers=3,hard,proto=tcp,mountproto=tcp,retry=30 0 0",
          "usageModel": "WRITE_AROUND"
        }
      ]
    },
    "virtualNetwork": {
      "value": {
        "name": "MediaStorage",
        "addressSpace": "10.9.255.0/24",
        "subnets": [
          {
            "name": "NetApp",
            "addressSpace": "10.9.255.0/25",
            "serviceEndpoints": [
            ],
            "delegations": [
              {
                "name": "netAppVolumes",
                "properties": {
                  "serviceName": "Microsoft.NetApp/volumes"
                }
              }
            ]
          },
          {
            "name": "Object",
            "addressSpace": "10.9.255.128/25",
            "serviceEndpoints": [
              {
                "service": "Microsoft.Storage"
              }
            ],
            "delegations": [
            ]
          }
        ]
      }
    }
  }
}
