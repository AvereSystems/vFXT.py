{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccount": {
      "value": {
        "name": "MediaStudio",
        "type": "StorageV2",
        "replication": "Standard_LRS",
        "subnetName": ""
      }
    },
    "storageContainers": {
      "value": [
        {
          "name": "scenes"
        },
        {
          "name": "frames"
        }
      ]
    },
    "storageTargets": {
      "value": [
        {
          "name": "Scenes",
          "type": "clfs",
          "junctions": [
            {
              "namespacePath": "/storage/object/scenes",
              "targetPath": ""
            }
          ],
          "mountOptions": "-fstype=nfs,vers=3"
        },
        {
          "name": "Frames",
          "type": "clfs",
          "junctions": [
            {
              "namespacePath": "/storage/object/frames",
              "targetPath": ""
            }
          ],
          "mountOptions": "-fstype=nfs,vers=3"
        }
      ]
    },
    "virtualNetwork": {
      "value": {
        "name": "MediaStorage",
        "addressSpace": "10.9.255.0/24",
        "subnets": [
          {
            "name": "NetApp",
            "addressSpace": "10.9.255.0/25",
            "serviceEndpoints": [
            ],
            "delegations": [
              {
                "name": "netAppVolumes",
                "properties": {
                  "serviceName": "Microsoft.NetApp/volumes"
                }
              }
            ]
          },
          {
            "name": "Object",
            "addressSpace": "10.9.255.128/25",
            "serviceEndpoints": [
              {
                "service": "Microsoft.Storage"
              }
            ],
            "delegations": [
            ]
          }
        ]
      }
    }
  }
}
