{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccount": {
      "value": {
        "name": "MediaStudioEast",
        "type": "StorageV2",
        "replication": "Standard_LRS",
        "subnetName": "Object"
      }
    },
    "storageContainers": {
      "value": [
        {
          "name": "frames"
        },
        {
          "name": "scenes"
        },
        {
          "name": "tools"
        }
      ]
    },
    "storageMounts": {
      "value": [
      ]
    },
    "storageTargets": {
      "value": [
        {
          "name": "Scenes",
          "type": "clfs",
          "junctions": [
            {
              "namespacePath": "/mnt/scenes",
              "targetPath": ""
            }
          ],
          "mountOptions": "rw,hard,vers=3,proto=tcp,mountproto=tcp,retry=30",
          "mountType": "nfs",
          "mountDrive": "S"
        }
      ]
    },
    "virtualNetwork": {
      "value": {
        "name": "MediaStorageEast",
        "addressSpace": "10.10.255.0/24",
        "subnets": [
          {
            "name": "NetApp",
            "addressSpace": "10.10.255.0/25",
            "serviceEndpoints": [
            ],
            "delegations": [
              {
                "name": "netAppVolumes",
                "properties": {
                  "serviceName": "Microsoft.NetApp/volumes"
                }
              }
            ]
          },
          {
            "name": "Object",
            "addressSpace": "10.10.255.128/25",
            "serviceEndpoints": [
              {
                "service": "Microsoft.Storage"
              }
            ],
            "delegations": [
            ]
          }
        ]
      }
    }
  }
}
