{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "cacheName": {
      "value": "RenderPipeline"
    },
    "cacheThroughput": {
      "value": "Standard_2G"
    },
    "cacheSize": {
      "value": 3072
    },
    "cacheConfig": {
      "value": {
        "mtuSize": 1500,
        "mountOptions": "ro,hard,proto=tcp,mountproto=tcp,retry=30"
      }
    },
    "storageTargets": {
      "value": [
        {
          "host": "mediaasset3.blob.core.windows.net",
          "junctions": [],
          "name": "Azure-Storage-Objects",
          "type": "nfs3",
          "usageModel": "WRITE_AROUND"
        },
        {
          "host": "10.0.1.4",
          "junctions": [
            {
              "namespacePath": "/mnt/cache/netapp",
              "nfsExport": "/volume-a",
              "targetPath": "/"
            }
          ],
          "name": "Azure-NetApp-Files",
          "type": "nfs3",
          "usageModel": "WRITE_AROUND"
        }
      ]
    },
    "virtualNetwork": {
      "value": {
        "name": "MediaPipeline",
        "subnetName": "Cache",
        "resourceGroupName": "Artist.Anywhere-Network"
      }
    }
  }
}
