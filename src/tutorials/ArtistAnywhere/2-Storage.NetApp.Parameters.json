{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "netAppAccountName": {
      "value": "ArtistAnywhere"
    },
    "capacityPoolName": {
      "value": "Media"
    },
    "capacityPoolTier": {
      "value": "Standard"
    },
    "capacityPoolSize": {
      "value": 4
    },
    "storageVolumes": {
      "value": [
        {
          "name": "Scenes",
          "junctions": [
            {
              "namespacePath": "/storage0/scenes",
              "nfsExport": "/scenes",
              "targetPath": ""
            }
          ],
          "mountOptions": "-fstype=nfs,vers=3",
          "usageModel": "WRITE_AROUND",
          "size": 2048
        },
        {
          "name": "Tools",
          "junctions": [
            {
              "namespacePath": "/storage0/tools",
              "nfsExport": "/tools",
              "targetPath": ""
            }
          ],
          "mountOptions": "-fstype=nfs,vers=3",
          "usageModel": "READ_HEAVY_INFREQ",
          "size": 1024
        }
      ]
    },
    "virtualNetworkName": {
      "value": "Storage0"
    },
    "virtualNetworkAddressSpace": {
      "value": "10.0.64.0/24"
    },
    "virtualNetworkSubnets": {
      "value": [
        {
          "name": "Default",
          "addressSpace": "10.0.64.0/25",
          "delegations": [
            {
              "name": "netAppVolumes",
              "properties": {
                "serviceName": "Microsoft.NetApp/volumes"
              }
            }
          ]
        }
      ]
    }
  }
}